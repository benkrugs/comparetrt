            <tr style={index === 0 ? 'background: #d1fae5; font-weight: 600;' : ''}>
              <td><a href={`/reviews/${provider.slug}/`} style="color: #1a56a8; text-decoration: none;">{provider.name}</a></td>
              <td style={index === 0 ? 'color: #059669; font-weight: 700;' : ''}>{provider.monthlyPrice}</td>
              <td>${(parseInt(provider.monthlyPrice.replace(/[^0-9]/g, '')) * 12).toLocaleString()}</td>
              <td style="font-size: 0.85rem;">{provider.consultationFee}</td>

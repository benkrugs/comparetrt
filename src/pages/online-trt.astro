---
import BaseLayout from '../layouts/BaseLayout.astro';
import FAQSchema from '../components/FAQSchema.astro';
import { providers } from '../data/providers';

const title = "Online TRT 2026: Complete Guide (9 Clinics Tested, $159-$548/Month)";
const description = "Online TRT explained: how telemedicine testosterone works, real costs ($159-$548/mo), doctor quality, blood work process, and 9 clinics ranked by results.";

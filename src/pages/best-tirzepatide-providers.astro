---
import BaseLayout from '../layouts/BaseLayout.astro';
import MedicalDisclaimer from '../components/MedicalDisclaimer.astro';
import { providers } from '../data/providers';

// Filter to providers offering tirzepatide (compounded or brand)
const tirzepatideProviders = providers
  .filter(p => p.medications.some(m => m.toLowerCase().includes('tirzepatide')))
  .sort((a, b) => b.totalScore - a.totalScore);

// Featured providers (Medvi, Remedy Meds, Ro)
const featuredProviders = tirzepatideProviders.filter(p => ['medvi', 'remedy-meds', 'ro'].includes(p.slug));

// Affiliate links
const affiliateLinks = {
  medvi: 'https://medvi.org/?page=multi&uid=5&oid=2&affid=2&pol=5&sub1=1350&sub1=1350&oid2=4412&affid2=1350',
  remedy: 'https://remedymeds.com/?rm_campaign=NY2026&toolid=TO-675opOKaInPCeJQvjBB7&utm_source=',
  ro: 'https://track.revoffers.com/aff_c?offer_id=959&aff_id=9953&url_id=11818'
};

---
import BaseLayout from '../layouts/BaseLayout.astro';
import MedicalDisclaimer from '../components/MedicalDisclaimer.astro';
import { providers } from '../data/providers';

// Filter to providers offering tirzepatide, sorted by price (lowest first)
const tirzepatideProviders = providers
  .filter(p => p.medications.some(m => m.toLowerCase().includes('tirzepatide')))
  .sort((a, b) => {
    const aPrice = parseInt(a.monthlyPrice.match(/\$(\d+)/)?.[1] || '9999');
    const bPrice = parseInt(b.monthlyPrice.match(/\$(\d+)/)?.[1] || '9999');
    return aPrice - bPrice;
  });

// Top 3 cheapest
const cheapest = tirzepatideProviders.slice(0, 3);

// Affiliate links

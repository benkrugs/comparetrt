---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { providers } from '../../data/providers';

export function getStaticPaths() {
  return providers.map(provider => ({
    params: { slug: provider.slug },
    props: { provider }
  }));
}

const { provider } = Astro.props;
---

<BaseLayout 
  title={`${provider.name} Review: Is It Worth It? | CompareWeightMeds`}
  description={`Unbiased ${provider.name} review. Pricing, medications, pros/cons, and our TeleHealth Score (${provider.totalScore}/100). ${provider.tagline}`}
>
  <style>
    .review-hero {
      background: linear-gradient(135deg, #10b981 0%, #059669 100%);
      color: white;
      padding: 60px 24px 40px;
    }
    
    .review-hero-inner {
      max-width: var(--mw);
      margin: 0 auto;
      display: flex;
      justify-content: space-between;
      align-items: center;
      flex-wrap: wrap;
      gap: 32px;
    }
    
    .review-hero-content h1 {
      font-size: clamp(2rem, 4vw, 3rem);
      font-weight: 700;
      margin-bottom: 12px;
      line-height: 1.2;
    }
    
    .review-hero-tagline {
      font-size: 1.15rem;
      opacity: 0.95;
      margin-bottom: 24px;
    }
    
    .review-hero-score {
      background: rgba(255, 255, 255, 0.15);
      backdrop-filter: blur(8px);
      padding: 24px;
      border-radius: var(--r);
      text-align: center;
      min-width: 200px;
    }
    
    .score-value {
      font-size: 3.5rem;
      font-weight: 700;
      line-height: 1;
    }
    
    .score-label {
      font-size: 0.9rem;
      opacity: 0.9;
      margin-top: 8px;
    }
    
    .content {
      max-width: var(--mw);
      margin: 0 auto;
      padding: 60px 24px;
      display: grid;
      grid-template-columns: 1fr 350px;
      gap: 48px;
    }
    
    .main-content h2 {
      font-size: 1.8rem;
      font-weight: 700;
      margin: 48px 0 16px;
    }
    
    .main-content h2:first-child {
      margin-top: 0;
    }
    
    .main-content p {
      font-size: 1.05rem;
      line-height: 1.7;
      color: var(--text-sec);
      margin-bottom: 20px;
    }
    
    .pros-cons {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 24px;
      margin: 32px 0;
    }
    
    .pros, .cons {
      background: var(--surface);
      border: 1.5px solid var(--border);
      border-radius: var(--r);
      padding: 24px;
    }
    
    .pros h3 {
      color: #059669;
      margin-bottom: 16px;
      font-size: 1.1rem;
    }
    
    .cons h3 {
      color: #dc2626;
      margin-bottom: 16px;
      font-size: 1.1rem;
    }
    
    .pros ul, .cons ul {
      list-style: none;
      font-size: 0.95rem;
    }
    
    .pros li, .cons li {
      margin-bottom: 10px;
      padding-left: 24px;
      position: relative;
    }
    
    .pros li::before {
      content: '‚úÖ';
      position: absolute;
      left: 0;
    }
    
    .cons li::before {
      content: '‚ùå';
      position: absolute;
      left: 0;
    }
    
    .sidebar {
      position: sticky;
      top: 100px;
      height: fit-content;
    }
    
    .sidebar-card {
      background: var(--surface);
      border: 1.5px solid var(--border);
      border-radius: var(--r);
      padding: 24px;
      margin-bottom: 24px;
    }
    
    .sidebar-card h3 {
      font-size: 1.1rem;
      margin-bottom: 16px;
    }
    
    .info-row {
      display: flex;
      justify-content: space-between;
      padding: 10px 0;
      border-bottom: 1px solid var(--border);
      font-size: 0.9rem;
    }
    
    .info-row:last-child {
      border-bottom: none;
    }
    
    .info-label {
      color: var(--text-sec);
    }
    
    .info-value {
      font-weight: 600;
      text-align: right;
    }
    
    .score-breakdown {
      display: flex;
      flex-direction: column;
      gap: 12px;
    }
    
    .score-item {
      display: flex;
      justify-content: space-between;
      align-items: center;
      font-size: 0.9rem;
    }
    
    .score-bar {
      height: 8px;
      background: var(--bg);
      border-radius: 4px;
      overflow: hidden;
      flex: 1;
      margin: 0 12px;
    }
    
    .score-fill {
      height: 100%;
      background: var(--accent);
      border-radius: 4px;
    }
    
    .badge {
      display: inline-flex;
      align-items: center;
      gap: 4px;
      padding: 4px 10px;
      border-radius: 100px;
      font-size: 0.8rem;
      font-weight: 600;
      background: var(--accent-light);
      color: var(--accent-dark);
    }
    
    .bottom-line {
      background: var(--accent-light);
      border-left: 4px solid var(--accent);
      padding: 24px;
      border-radius: var(--r);
      margin: 32px 0;
    }
    
    .bottom-line h3 {
      color: var(--accent-dark);
      margin-bottom: 12px;
      font-size: 1.2rem;
    }
    
    .bottom-line p {
      color: var(--text);
      font-size: 1.05rem;
      line-height: 1.7;
      margin: 0;
    }
    
    @media (max-width: 1024px) {
      .content {
        grid-template-columns: 1fr;
      }
      
      .sidebar {
        position: static;
      }
      
      .pros-cons {
        grid-template-columns: 1fr;
      }
    }
  </style>

  <div class="review-hero">
    <div class="review-hero-inner">
      <div class="review-hero-content">
        <h1>{provider.name} Review</h1>
        <p class="review-hero-tagline">{provider.tagline}</p>
        {provider.affiliateLink && (
          <a href={provider.affiliateLink} target="_blank" rel="noopener" class="btn btn-primary">
            Visit {provider.name} ‚Üí
          </a>
        )}
      </div>
      
      <div class="review-hero-score">
        <div class="score-value">‚≠ê {provider.totalScore}</div>
        <div class="score-label">TeleHealth Score</div>
      </div>
    </div>
  </div>

  <div class="content">
    <div class="main-content">
      <h2>Overview</h2>
      <p>{provider.description}</p>
      
      <h2>Pros & Cons</h2>
      <div class="pros-cons">
        <div class="pros">
          <h3>‚úÖ Pros</h3>
          <ul>
            {provider.pros.map(pro => <li>{pro}</li>)}
          </ul>
        </div>
        
        <div class="cons">
          <h3>‚ùå Cons</h3>
          <ul>
            {provider.cons.map(con => <li>{con}</li>)}
          </ul>
        </div>
      </div>
      
      <h2>Medications Offered</h2>
      <ul style="list-style: none; padding: 0;">
        {provider.medications.map(med => (
          <li style="padding: 8px 0; border-bottom: 1px solid var(--border); font-size: 0.95rem;">
            üíä {med}
          </li>
        ))}
      </ul>
      
      <div class="bottom-line">
        <h3>The Bottom Line</h3>
        <p>{provider.bottomLine}</p>
      </div>
      
      {provider.affiliateLink && (
        <div style="text-align: center; margin-top: 48px;">
          <a href={provider.affiliateLink} target="_blank" rel="noopener" class="btn btn-primary" style="font-size: 1.1rem; padding: 16px 32px;">
            Get Started with {provider.name} ‚Üí
          </a>
        </div>
      )}
    </div>
    
    <aside class="sidebar">
      <div class="sidebar-card">
        <h3>Quick Facts</h3>
        <div class="info-row">
          <span class="info-label">Monthly Cost</span>
          <span class="info-value">{provider.monthlyPrice}</span>
        </div>
        <div class="info-row">
          <span class="info-label">Consultation Fee</span>
          <span class="info-value">{provider.consultationFee}</span>
        </div>
        <div class="info-row">
          <span class="info-label">Membership Fee</span>
          <span class="info-value">{provider.membershipFee}</span>
        </div>
        <div class="info-row">
          <span class="info-label">Lab Work</span>
          <span class="info-value">{provider.labWork}</span>
        </div>
        <div class="info-row">
          <span class="info-label">Insurance</span>
          <span class="info-value">{provider.insurance ? '‚úÖ Yes' : '‚ùå No'}</span>
        </div>
        <div class="info-row">
          <span class="info-label">24/7 Support</span>
          <span class="info-value">{provider.support247 ? '‚úÖ Yes' : '‚ùå No'}</span>
        </div>
        <div class="info-row">
          <span class="info-label">Money-Back</span>
          <span class="info-value">{provider.moneyBackGuarantee ? '‚úÖ Yes' : '‚ùå No'}</span>
        </div>
      </div>
      
      <div class="sidebar-card">
        <h3>Score Breakdown</h3>
        <div class="score-breakdown">
          <div class="score-item">
            <span>Pricing</span>
            <div class="score-bar">
              <div class="score-fill" style={`width: ${(provider.scoreBreakdown.pricing / 25) * 100}%`}></div>
            </div>
            <span>{provider.scoreBreakdown.pricing}/25</span>
          </div>
          
          <div class="score-item">
            <span>Medication</span>
            <div class="score-bar">
              <div class="score-fill" style={`width: ${(provider.scoreBreakdown.medication / 25) * 100}%`}></div>
            </div>
            <span>{provider.scoreBreakdown.medication}/25</span>
          </div>
          
          <div class="score-item">
            <span>Doctor Care</span>
            <div class="score-bar">
              <div class="score-fill" style={`width: ${(provider.scoreBreakdown.doctorCare / 15) * 100}%`}></div>
            </div>
            <span>{provider.scoreBreakdown.doctorCare}/15</span>
          </div>
          
          <div class="score-item">
            <span>Support</span>
            <div class="score-bar">
              <div class="score-fill" style={`width: ${(provider.scoreBreakdown.support / 15) * 100}%`}></div>
            </div>
            <span>{provider.scoreBreakdown.support}/15</span>
          </div>
          
          <div class="score-item">
            <span>Delivery</span>
            <div class="score-bar">
              <div class="score-fill" style={`width: ${(provider.scoreBreakdown.delivery / 10) * 100}%`}></div>
            </div>
            <span>{provider.scoreBreakdown.delivery}/10</span>
          </div>
          
          <div class="score-item">
            <span>Transparency</span>
            <div class="score-bar">
              <div class="score-fill" style={`width: ${(provider.scoreBreakdown.transparency / 10) * 100}%`}></div>
            </div>
            <span>{provider.scoreBreakdown.transparency}/10</span>
          </div>
        </div>
      </div>
      
      {provider.trustpilotRating && (
        <div class="sidebar-card">
          <h3>Customer Reviews</h3>
          <div style="text-align: center;">
            <div style="font-size: 2.5rem; font-weight: 700; color: var(--accent); margin-bottom: 8px;">
              {provider.trustpilotRating}
            </div>
            <div style="font-size: 0.9rem; color: var(--text-sec);">
              Based on {provider.trustpilotReviews?.toLocaleString()} reviews
            </div>
          </div>
        </div>
      )}
    </aside>
  </div>
</BaseLayout>

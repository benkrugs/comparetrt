---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { providers } from '../../data/providers';

// Sort by score
const sortedProviders = [...providers].sort((a, b) => b.totalScore - a.totalScore);
---

<BaseLayout 
  title="GLP-1 Provider Reviews: Compare All {providers.length} (2026)"
  description="Read detailed reviews of {providers.length} GLP-1 weight loss providers. Compare pricing, medications, customer support, and real user experiences."
>
  <style>
    .hero {
      background: linear-gradient(135deg, #10b981 0%, #059669 100%);
      color: white;
      padding: 80px 24px 60px;
      text-align: center;
    }
    
    .hero h1 {
      font-size: clamp(2.2rem, 5vw, 3rem);
      font-weight: 700;
      margin-bottom: 16px;
      line-height: 1.2;
      color: white;
    }
    
    .hero p {
      font-size: 1.15rem;
      opacity: 0.95;
      max-width: 700px;
      margin: 0 auto 32px;
    }
    
    .content {
      max-width: 1200px;
      margin: 0 auto;
      padding: 60px 24px 80px;
    }
    
    .provider-grid {
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(340px, 1fr));
      gap: 24px;
      margin: 32px 0;
    }
    
    .provider-card {
      background: var(--surface);
      border: 1.5px solid var(--border);
      border-radius: var(--r);
      padding: 28px;
      transition: all 0.2s;
      display: flex;
      flex-direction: column;
    }
    
    .provider-card:hover {
      border-color: var(--accent);
      transform: translateY(-4px);
      box-shadow: var(--shl);
    }
    
    .provider-header {
      display: flex;
      justify-content: space-between;
      align-items: flex-start;
      margin-bottom: 16px;
    }
    
    .provider-name {
      font-size: 1.4rem;
      font-weight: 700;
      margin-bottom: 4px;
    }
    
    .provider-score {
      font-size: 1.8rem;
      font-weight: 700;
      color: var(--accent);
      text-align: right;
    }
    
    .score-label {
      font-size: 0.75rem;
      color: var(--text-sec);
      font-weight: normal;
    }
    
    .provider-tagline {
      font-size: 0.9rem;
      color: var(--text-sec);
      margin-bottom: 16px;
    }
    
    .provider-price {
      font-size: 1.8rem;
      font-weight: 700;
      color: var(--accent);
      margin: 12px 0;
    }
    
    .provider-details {
      background: var(--bg);
      padding: 16px;
      border-radius: var(--r);
      margin: 16px 0;
      font-size: 0.9rem;
    }
    
    .detail-row {
      display: flex;
      justify-content: space-between;
      padding: 8px 0;
      border-bottom: 1px solid var(--border);
    }
    
    .detail-row:last-child {
      border-bottom: none;
    }
    
    .detail-label {
      color: var(--text-sec);
    }
    
    .detail-value {
      font-weight: 600;
      color: var(--text);
    }
    
    .provider-bottom {
      margin-top: auto;
      padding-top: 16px;
    }
    
    .best-for {
      font-size: 0.9rem;
      color: var(--text-sec);
      margin-bottom: 16px;
      line-height: 1.5;
    }
    
    .btn {
      display: block;
      padding: 14px 28px;
      background: var(--accent);
      color: white;
      text-decoration: none;
      border-radius: var(--r);
      font-weight: 600;
      transition: all 0.2s;
      text-align: center;
    }
    
    .btn:hover {
      background: var(--accent-dark);
      transform: translateY(-1px);
    }
  </style>

  <div class="hero">
    <h1>GLP-1 Provider Reviews</h1>
    <p>Read detailed reviews of all {providers.length} weight loss providers. Compare pricing, medications, and real user experiences.</p>
  </div>

  <div class="content">
    <div class="provider-grid">
      {sortedProviders.map((provider) => (
        <div class="provider-card">
          <div class="provider-header">
            <div>
              <div class="provider-name">{provider.name}</div>
            </div>
            <div class="provider-score">
              {provider.totalScore}
              <div class="score-label">/100</div>
            </div>
          </div>
          
          <div class="provider-tagline">{provider.tagline}</div>
          
          <div class="provider-price">{provider.monthlyPrice}</div>
          
          <div class="provider-details">
            <div class="detail-row">
              <span class="detail-label">Consultation</span>
              <span class="detail-value">{provider.consultationFee}</span>
            </div>
            <div class="detail-row">
              <span class="detail-label">Type</span>
              <span class="detail-value">
                {provider.compounded && provider.brandName ? 'Both' : provider.compounded ? 'Compounded' : 'Brand-Name'}
              </span>
            </div>
            <div class="detail-row">
              <span class="detail-label">Support</span>
              <span class="detail-value">{provider.support247 ? '24/7' : 'Business Hours'}</span>
            </div>
          </div>
          
          <div class="provider-bottom">
            <div class="best-for">
              <strong>Best for:</strong> {provider.bestFor}
            </div>
            <a href={`/reviews/${provider.slug}/`} class="btn">Read Full Review â†’</a>
          </div>
        </div>
      ))}
    </div>
  </div>
</BaseLayout>
